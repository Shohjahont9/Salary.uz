<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back_layout"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_mood" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_surname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="Name"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_surname"
                    android:paddingLeft="10dp"
                    android:text="Name"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold|italic" />


                <TextView
                    android:id="@+id/tv_lavozim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="10dp"
                    android:text="Name"
                    android:textColor="@color/black"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/tv_maosh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_lavozim"
                    android:paddingLeft="10dp"
                    android:text="Name"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rel1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Familya"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/et_surname"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/back_edit_text"
                        android:padding="5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Ism"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/et_surname"
                        android:background="@drawable/back_edit_text"
                        android:padding="5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Lavozim"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/et_lavozim"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/et_name"
                        android:background="@drawable/back_edit_text"
                        android:padding="5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Bonus"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/et_maosh"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/et_lavozim"
                        android:background="@drawable/back_edit_text"
                        android:padding="5dp" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:id="@+id/next_page"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@color/white"
                        android:padding="12dp"
                        android:src="@drawable/ic_edit" />

                    <ImageView
                        android:id="@+id/check"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@color/white"
                        android:padding="12dp"
                        android:src="@drawable/ic_check"
                        android:visibility="gone" />


                </RelativeLayout>
            </RelativeLayout>

            <ImageView
                android:layout_width="50dp"
                android:padding="12dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_delete"
                android:id="@+id/delete"/>
        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>